---
interface Props {
  title: string;
  subtitle?: string;
  description?: string;
}

const { title, subtitle, description } = Astro.props;
---

<section class="bg-gray-900 text-white relative overflow-hidden">
  <!-- Background pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\"40\" height=\"40\" viewBox=\"0 0 40 40\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23ff7600\" fill-opacity=\"0.1\"%3E%3Ccircle cx=\"20\" cy=\"20\" r=\"1\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
  </div>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 relative z-10">
    <div class="text-center">
      <h1 class="text-4xl lg:text-5xl font-bold mb-4">
        {title}
      </h1>
      {subtitle && (
        <p class="text-xl lg:text-2xl text-gray-300 mb-6">
          {subtitle}
        </p>
      )}
      {description && (
        <p class="text-lg text-gray-400 max-w-3xl mx-auto">
          {description}
        </p>
      )}
    </div>
  </div>
</section>