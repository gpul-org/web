---
import ImagePlaceholder from './ImagePlaceholder.astro';

interface Props {
  title?: string;
  subtitle?: string;
  description?: string;
  showImage?: boolean;
}

const { 
  title = "GPUL",
  subtitle = "Grupo de Programadores e Usuarios de Linux",
  description = "Defendendo o software libre dende 1998",
  showImage = true
} = Astro.props;
---

<section class="bg-gradient-to-r from-blue-800 to-blue-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="text-center lg:text-left">
        <h1 class="text-4xl lg:text-6xl font-bold mb-4">
          {title}
        </h1>
        <p class="text-xl lg:text-2xl text-blue-100 mb-6">
          {subtitle}
        </p>
        <p class="text-lg text-blue-200 mb-8 max-w-2xl">
          {description}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a 
            href="/about" 
            class="bg-white text-blue-800 px-8 py-3 rounded-lg font-semibold hover:bg-blue-50 transition-colors duration-200"
          >
            Coñécenos
          </a>
          <a 
            href="/events" 
            class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-blue-800 transition-colors duration-200"
          >
            Próximos Eventos
          </a>
        </div>
      </div>

      <!-- Image -->
      {showImage && (
        <div class="flex justify-center lg:justify-end">
          <ImagePlaceholder 
            width="400px" 
            height="300px" 
            alt="GPUL Logo" 
            className="rounded-lg shadow-2xl"
          />
        </div>
      )}
    </div>
  </div>
</section>