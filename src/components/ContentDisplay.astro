const { contents, card } = Astro.props;
const Card = card;
---

<section>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

    <div class="text-center mb-12">
      <slot name="title"/>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 justify-items-center pb-4">
      {
        contents.map((content: any) =>
          <Card
            content={content}
          />
        )
      }
    </div>

  </div>
</section>
