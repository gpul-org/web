---
import type { Directive } from '../content/directive.ts';
import Github from "lucide-astro/Github";
import Linkedin from "lucide-astro/Linkedin";

interface Props {
  content : Directive,
  class?: string
}
const { content, class: className = "" } = Astro.props;
---
<div class={`bg-white rounded-lg shadow-md overflow-hidden w-80 ${className}`}>
  <div class="p-2">
    <img
      src={content.data.github + ".png"}
      alt={content.id}
      height="100%"
      width="100%"
      class="w-full h-48 object-cover rounded"
    />
  </div>
  <div class="p-4">
    <h3 class="text-lg font-semibold text-gray-900 mb-1">
      {content.id}
    </h3>
    <p class="text-blue-600 font-medium mb-2">{content.data.role}</p>
    <p class="text-sm text-gray-600 mb-4">{content.data.bio}</p>

    <div class="flex gap-2 justify-center">
      {content.data.github && (
        <a
          href={content.data.github}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center w-10 h-10 bg-gray-100 hover:bg-gray-200 rounded-lg transition-colors"
          title={`GitHub de ${content.id}`}
        >
          <Github class="w-5 h-5 text-gray-700" />
        </a>
      )}
      {content.data.linkedin && (
        <a
          href={content.data.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center w-10 h-10 bg-blue-100 hover:bg-blue-200 rounded-lg transition-colors"
          title={`LinkedIn de ${content.id}`}
        >
          <Linkedin class="w-5 h-5 text-blue-700" />
        </a>
      )}
    </div>
  </div>
</div>
