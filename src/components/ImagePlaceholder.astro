---
import Image from "lucide-astro/Image";

interface Props {
  width?: string;
  height?: string;
  alt?: string;
  className?: string;
}

const { 
  width = "100%", 
  height = "200px", 
  alt = "Image placeholder", 
  className = "" 
} = Astro.props;
---

<div 
  class={`bg-gray-200 border-2 border-dashed border-gray-400 flex items-center justify-center text-gray-500 ${className}`}
  style={`width: ${width}; height: ${height};`}
>
  <div class="text-center">
    <Image class="mx-auto h-12 w-12 text-gray-400 mb-2" />
    <p class="text-sm">{alt}</p>
  </div>
</div>
