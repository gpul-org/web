---
import PageLayout from "../layouts/PageLayout.astro";
import Hero from "../components/Hero.astro";
import Activities from "../components/Activities.astro";
import NovaCard from "../components/NovaCard.astro";
import EventCard from "../components/EventCard.astro";
import ContentTeaser from "../components/ContentTeaser.astro";

import { novas } from "../content/nova.ts";
import { upcomingEvents } from "../content/event.ts";
import CallToAction from "../components/CallToAction.astro";
---

<PageLayout
  title="GPUL - Grupo de Programadores e Usuarios de Linux"
  description="Defendendo o software libre dende 1998. Asociación universitaria dedicada á promoción do software libre e a tecnoloxía aberta."
>
  <Hero />

  <Activities />

  <!-- Sección: Próximos eventos -->
  <ContentTeaser contents={upcomingEvents} card={EventCard}>
    <h2 slot="title" class="text-3xl font-bold text-gray-900 dark:text-white">
      Próximos eventos
    </h2>
    <a
      slot="more"
      href="/eventos"
      class="text-blue-600 dark:text-blue-500 hover:text-blue-700 font-medium dark:hover:text-blue-400"
    >
      Ver todos →
    </a>
  </ContentTeaser>

  <!-- Sección: Últimas noticias -->
  <ContentTeaser contents={novas} card={NovaCard}>
    <h2 slot="title" class="text-3xl font-bold text-gray-900 dark:text-white">
      Últimas noticias
    </h2>
    <a
      slot="more"
      href="/novas"
      class="text-blue-600 dark:text-blue-500 hover:text-blue-700 font-medium dark:hover:text-blue-400"
    >
      Ver todas →
    </a>
  </ContentTeaser>

  <CallToAction />
</PageLayout>
