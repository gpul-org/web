const directiva = [
  {
    name: "Jorge Teixeira",
    role: "Presidente",
    bio: "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
    github: "https://github.com/jorgeteixe",
    linkedin: "https://linkedin.com/in/jorge-teixeira-crespo",
  },
  {
    name: "David Maseda",
    role: "Vicepresidente",
    bio: "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
    github: "https://github.com/wizenink",
    linkedin: "https://www.linkedin.com/in/david-maseda-neira-98a042a2/",
  },
  {
    name: "Álvaro Freire",
    role: "Tesoureiro",
    bio: "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
    github: "https://github.com/alvaro-freire",
    linkedin: "https://linkedin.com/in/alvvarofreire",
  },
  {
    name: "Paula Taibo",
    role: "Secretaria",
