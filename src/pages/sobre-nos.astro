---
import PageLayout from "../layouts/PageLayout.astro";
import PageTitle from "../components/PageTitle.astro";
import Mission from "../components/Mission.astro";
import CallToAction from "../components/CallToAction.astro";

import { directive } from '../content/directive.ts'
import DirectiveCard from "../components/DirectiveCard.astro";
import ContentDisplay from "../components/ContentDisplay.astro";
console.log({directive})
---

<PageLayout
  title="Quen somos - GPUL"
  description="Coñece a historia, misión e equipo do Grupo de Programadores e Usuarios de Linux (GPUL), defendendo o software libre dende 1998."
>
  <PageTitle
    title="Quen Somos"
    subtitle="26 anos promovendo a cultura libre na Universidade da Coruña e máis alá"
  />

  <Mission/>

  <!-- Historia -->
  <!-- TODO: HistoryCard? ContentDisplay(HistoryCard)? -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">A nosa historia</h2>
        <p class="text-xl text-gray-600">
          Máis de dúas décadas defendendo os valores do software libre
        </p>
      </div>

      <div class="bg-white p-12 rounded-lg shadow-md text-center">
        <div
          class="inline-flex items-center justify-center w-16 h-16 bg-blue-100 rounded-full mb-6"
        >
          <svg
            class="w-8 h-8 text-blue-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-semibold text-gray-900 mb-4">
          Sección en construción
        </h3>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Estamos traballando na cronoloxía da historia de GPUL. Mentres tanto,
          podes coñecer máis sobre nós a través da nosa xunta directiva e das
          nosas actividades.
        </p>
      </div>
    </div>
  </section>

  <!-- Directiva actual -->
  <ContentDisplay contents={directive} card={DirectiveCard}>
    <Fragment slot="title">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Xunta Directiva</h2>
      <p class="text-xl text-gray-600">
        O equipo que lidera GPUL na actualidade
      </p>
    </Fragment>
  </ContentDisplay>

  <CallToAction/>

</PageLayout>
