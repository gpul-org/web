---
import PageLayout from "../layouts/PageLayout.astro";
import PageTitle from "../components/PageTitle.astro";
import { novas } from '../content/nova.ts';
import ContentDisplay from "../components/ContentDisplay.astro";
import NovaCard from "../components/NovaCard.astro";
---

<PageLayout
  title="Noticias - GPUL" 
  description="Mantente ao día coas últimas noticias e actualidades do Grupo de Programadores e Usuarios de Linux (GPUL)."
>
  <PageTitle 
    title="Noticias GPUL" 
    subtitle="Mantente informado das últimas novidades, eventos e iniciativas do noso grupo"
  />

  <!-- Filtros -->
  <section class="py-8 bg-gray-50 border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-wrap gap-2 justify-center">
        <button class="px-4 py-2 bg-blue-600 text-white rounded-full text-sm font-medium hover:bg-blue-700 transition-colors">
          Todas
        </button>
        <button class="px-4 py-2 bg-white text-gray-700 border border-gray-300 rounded-full text-sm font-medium hover:bg-gray-50 transition-colors">
          Directiva
        </button>
        <button class="px-4 py-2 bg-white text-gray-700 border border-gray-300 rounded-full text-sm font-medium hover:bg-gray-50 transition-colors">
          Formación
        </button>
        <button class="px-4 py-2 bg-white text-gray-700 border border-gray-300 rounded-full text-sm font-medium hover:bg-gray-50 transition-colors">
          Eventos
        </button>
        <button class="px-4 py-2 bg-white text-gray-700 border border-gray-300 rounded-full text-sm font-medium hover:bg-gray-50 transition-colors">
          Tecnoloxía
        </button>
      </div>
    </div>
  </section>

  <!-- Lista de noticias -->
  <ContentDisplay contents={novas} card={NovaCard}>
    <Fragment slot="title">

    </Fragment>
  </ContentDisplay>

